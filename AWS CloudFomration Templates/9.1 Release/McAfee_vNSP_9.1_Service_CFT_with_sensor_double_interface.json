		  "Tags" : [ {"Key" : "Name", "Value" :{ "Fn::Join" : ["",[{ "Ref" : "AWS::StackName" },"ProtectedSubnet"]]}} ],
         "VpcId": {
          "Ref": "DemoVPC"
            }
        }
      }, 
	   
	"DemoInternetGateway" : {
      "Type" : "AWS::EC2::InternetGateway",
